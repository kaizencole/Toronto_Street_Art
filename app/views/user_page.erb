<HEAD>
    <TITLE>My Posted Artwork</TITLE>
      <h1>MY STREET ART</h1>
    <!-- ## Login  ## -->

  <nav class="navbar navbar-fixed-bottom">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="/user_page"><font color="yellow">Gotta catch'em all!</font></a>
      </div>
      <ul class="nav navbar-nav navbar-right">
        <li class="active"><a href="/">Home</a></li>
        <li><a href="/user_page/pictures/new">Add Artwork</a></li>
        <li>
          <form role="search" action="/search" method="get" class="navbar-form navbar-left">
            <div class="form-group">
                <input type="text" name="street1" placeholder="Street 1" class="form-control">
                <input type="text" name="street2" placeholder="Street 2" class="form-control">
            </div>
            <button type="submit" class="btn btn-default">Find Art!</button>
          </form>
