<HEAD>
  <TITLE>Toronto Street Art</TITLE>
<div class="modal-header">
<div class="panel-heading">
  <h1>TORONTO STREET ART</h1>
</div>


  <!-- ## Login  ## -->

<div class="panel-login">

    <% if current_user %>
      <form method = 'get' action = '/logout'>
      <input type="submit" value = "logout">
      </form>
    <% else %>
      <form action="/session" method="post">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" required>

          <label for="password">Password</label>
          <input type="password" id="password" name="password" required>

      <br>
          <label><input type="checkbox" name="remember_me" value="true"> Remember Me</label>
      <br>
          <input type="submit" name="submit" value="Log In">
        </div>
      </form>
    <% end %>
    <br />

</div>


</HEAD>

<BODY>

  <!-- ## Search  ## -->

<div class="jumbotron">
  <!-- <video id="bg-video" autoplay="true" loop="loop" preload="metadata" muted="muted">
        <source src="https://www.youtube.com/watch?v=iarSZjbkufk" type="video/TYPE" />
  </video> -->

  <h4>Find street art by the nearest intersection.</h4>

    <form method='get' action='/search' class="form-horizontal">
      <div>
        <label> // Street 1  </label> <&nbsp>>
        <input type="text" name="street1">
      </div>
      <div>
        <label>// Street 2  </label> <&nbsp>>
        <input type="text" name="street2">
      </div>
      <br>
      <div>
        <p><a class="btn btn-success btn-lg"><input type="submit" value="Submit"></a></p>
      </div>
  </form>
</div>


  <!-- ##  Display Pictures ## -->

  <% @pictures.each do |picture| %>

    <div class="picture">
      <h2> // <%= picture.intersection.street1%> <small> AND </small> <%= picture.intersection.street2%> // </h2>
      <h3><small>Submitted by:</small> <%= picture.user.name %> </h3>
      <p><small> Posted on: <%= picture.created_at %></small></p>

      <img src="<%= picture.img_url %>" width="600">
      <i><h5><small>Artist:</small> <%= picture.artist_name %> </h5></i>
      <h6> <%= picture.text %> </h6>

      <br>
      <br>
    </div>
  <% end %>

</BODY>
