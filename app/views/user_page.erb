    <!-- ## Search  ## -->
<BODY>
  <div class="jumbotron">
    <div class="panel-login">
      <h4>What's up! <h5> <%= current_user.name %></h5> </h4>

      <% if current_user %>
        <form method= 'get' action = '/logout'>
        <button type="submit" class="btn-warning btn-sm">Log Out</button>
        </form>
      <% else %>
        <form action="/session" method="post">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" required>

            <label for="password">Password</label>
            <input type="password" id="password" name="password" required>

        <br>
            <label><input type="checkbox" name="remember_me" value="true"> Remember Me</label>
        <br>
            <button type="submit" class="btn-warning btn-sm">Log In</button>
          </div>
        </form>
      <% end %>
      <br />
    </div>

  </div>

  <!-- ##  Display Pictures ## -->

<% current_user.pictures.each do |picture| %>

<div class="picture">
  <br><br>
  <h2> // <%= picture.intersection.street1%> <small> AND </small> <%= picture.intersection.street2%> // </h2>
  <h3><small>Submitted by:</small> <%= picture.user.name %> </h3>
  <p><small> Posted on: <%= picture.created_at %></small></p>

  <img src="<%= picture.img_url %>" width="600">

    <div class="comment" style="width: 95%; position: relative; float: left">
      <i><h5><small>Artist:</small> <%= picture.artist_name %> </h5></i>
      <br>
      <h6> <%= picture.text %> </h6>
    </div>

    <div class="update_delete_buttons" align=right style="width: 5%; position: relative; float: right">
      <br>
      <div>
        <form method="post" action="/pictures/<%= picture.id %>/edit">
        <botton type="submit" class="btn-primary btn-sm"> Edit </button>
        </form>
      </div>
      <br>
      <div>
         <form method="post" action="/pictures/<%= picture.id %>/delete">
           <botton type="submit" class="btn-danger btn-sm"> Delete </button>
         </form></div>
        </div>
</div>
<br>
<br>
<br>
<br>
<% end %>

</BODY>
